<% layout("/layouts/boilerplate")%>
<div class="row">
  <div class="col-8 offset-2">
    
    <h1 class="heading">Edit Your Listing</h1>
    <br>
    
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT"   novalidate class="needs-validation">
      <div class="com">
      <div class="md-3 ">
        <label for="title" class="form-lable">Title</label>
      <input name="listing[title]" value="<%= listing.title %>" type="text" class="form-control" required/>
  </div>
      <div class="md-3 ">
        <label for="description" class="form-lable">Description</label>
      <textarea name="listing[description]"  required  class="form-control"><%= listing.description %></textarea>
      </div>
    

      <div class="md-3 ">
        <label for="image" class="form-lable">Image</label>
        <input name="listing[image]"  required  value="<%= listing.image %>" type="text"   class="form-control" />
      </div>
      <div class="row">
      <div class="md-3 col-md-4">
        <label for="Price" class="form-lable">Price</label>
        <input name="listing[price]"  required  value="<%= listing.price %>"  class="form-control "/>
      </div>
      <div class="md-3 col-md-8">
        <label for="country" class="form-lable">Country</label>
        <input name="listing[country]"  required  value="<%= listing.country %>" type="text" class="form-control" />
      </div>
    </div>
 
   

    <!-- script.js add -->
    
      <div class="md-3">
        <label for="location" class="form-lable">Location</label>
        <input name="listing[location]"   required value="<%= listing.location %>" type="text" class="form-control" />
    </div>
  </div>
<br>
      <button class="btn btn-dark all-button edit-btn">Edit</button>
      <br>
      <br>
    </form>
  </div>
  </div>
  <script src="style.js"></script>