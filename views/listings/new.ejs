<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <h1>Create a New Listing</h1>
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">

      <div class="md-3">
      <label for="title" class="form-lable">Title</label>
      <input name="listing[title]"  placeholder="enter title"  type="text"  class="form-control"  required />
      <div class="invalid-feedback"> Please enter the title</div>
    </div>

    <div class="md-3">
      <label for="description" class="form-lable">Description</label>
      <textarea name="listing[description]" class="form-control"  required > </textarea>
      <div class="invalid-feedback"> Please enter the Description
      </div>
   </div>

    <div class="md-3">
      <label for="image" class="form-lable">Image-link</label>
      <input name="listing[image]" placeholder="Image link" type="text"    class="form-control"  required />

    </div>
    <!-- <div class="md-3">
      <label for="image" class="form-lable">Upload Listing Image</label>
      <input name="listing[image]"  type="file"    class="form-control"  required />

    </div> -->
   
    <div class="row ">
      <div class="md-3 col-md-4">
        <label for="Price" class="form-lable">Price</label>
        <input name="listing[price]" placeholder="enter price"   class="form-control" required  />
        <div class="invalid-feedback"> Please enter the price </div>
      </div>


      <div class="md-3 col-md-8"> 
        <label for="country" class="form-lable">Contry</label>
        <input name="listing[country]" placeholder="enter country" type="text"  class="form-control"  required />
        <div class="invalid-feedback"> Please enter the country </div>
      </div>
       

    </div>
    <div class="md-3">
      <label for="location" class="form-lable">Add location</label>
      <input name="listing[location]" placeholder="enter location" type="text" class="form-control"  required/>
      <div class="invalid-feedback"> Please enter the location </div>    
    </div>
   <br><br>

      <button class="btn btn-dark add-btn">Add</button>
      <br><br>

    </form>
  </div>
</div>
</body>
</html>